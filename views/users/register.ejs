
<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-lg-6">
        <div class="container mt-5 d-flex align-items-center flex-column">
            <h1 class="text-primary">Register!</h1>
            <form action="/register" method="POST" novalidate class="needs-validation w-50">
                <div class="form-group mb-3">
                  <label for="username">Username</label>
                  <input type="text" class="form-control" id="username"  name="username" placeholder="Enter Username" required>
                </div>
                <div class="form-group mb-3">
                  <label for="email">Email address</label>
                  <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email" required>
                  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group mb-3">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                </div>
               
                <button type="submit" class="btn btn-primary">Register</button>
              </form>
        </div>
    </div>
    <div class="col-lg-6 d-none d-lg-block mt-5">
        <img src="/images/undraw_adventure_map_hnin.svg" alt="">
    </div>
</div>


<script  src="/js/formValidator.js"></script>